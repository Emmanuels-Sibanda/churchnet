{
  "name": "church-venue-hiring",
  "version": "1.0.0",
  "description": "Church venue and equipment hiring platform",
  "private": true,
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:deploy": "npm run build && node deploy/build-deploy.js",
    "package:deploy": "npm run build:deploy"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
